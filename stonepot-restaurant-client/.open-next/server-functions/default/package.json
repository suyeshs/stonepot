{
  "name": "stonepot",
  "version": "1.0.0",
  "description": "Voice-powered AI services monorepo",
  "private": true,
  "workspaces": [
    "stonepot-financial",
    "stonepot-restaurant",
    "stonepot-restaurant-display",
    "stonepot-restaurant-client"
  ],
  "scripts": {
    "dev:financial": "cd stonepot-financial && bun run dev",
    "dev:restaurant": "cd stonepot-restaurant && bun run dev",
    "dev:display": "cd stonepot-restaurant-display && npm run dev",
    "dev:client": "cd stonepot-restaurant-client && npm run dev",
    "install:all": "npm install && cd stonepot-financial && bun install && cd ../stonepot-restaurant && bun install && cd ../stonepot-restaurant-display && npm install && cd ../stonepot-restaurant-client && npm install",
    "clean": "rm -rf node_modules stonepot-*/node_modules stonepot-*/.next stonepot-*/dist stonepot-*/out"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/stonepot.git"
  },
  "keywords": [
    "voice-ai",
    "vertex-ai",
    "restaurant",
    "financial",
    "multimodal"
  ],
  "author": "Stonepot Team",
  "license": "PROPRIETARY"
}
